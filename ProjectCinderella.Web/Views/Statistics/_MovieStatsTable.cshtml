@model ProjectCinderella.Model.UI.MovieStatsModel

<div class="collapse in">
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item active">
                Movie Stats
            </li>
            <li class="list-group-item">
                Blu Ray Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Types.NumBluRay</span>
            </li>
            <li class="list-group-item">
                DVD Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Types.NumDVD</span>
            </li>
        </ul>
    </div>
</div>

<div class="collapse in">
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item active">
                Rating Stats
            </li>
            <li class="list-group-item">
                Rated G
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Ratings.NumRatedG</span>
            </li>
            <li class="list-group-item">
                Rated PG
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Ratings.NumRatedPG</span>
            </li>
            <li class="list-group-item">
                Rated PG 13
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Ratings.NumRatedPG13</span>
            </li>
            <li class="list-group-item">
                Rated R
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Ratings.NumRatedR</span>
            </li>
            <li class="list-group-item">
                Rated NR
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Ratings.NumRatedNR</span>
            </li>
        </ul>
    </div>
</div>

<div class="collapse in">
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item active">
                Top Directors
            </li>
