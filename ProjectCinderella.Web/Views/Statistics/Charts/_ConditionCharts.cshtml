@model ProjectCinderella.Model.UI.Condition

<script>
	c3.generate({
		bindto: '#@Model.ID',
		data: {
			columns: [
				['New', @Model.NumNew],
				['Used', @Model.NumUsed]
			],
			type: 'donut'
		},
		donut: {
			title: "@Model.Title",
			label: {
				format: function (value) { return value; }
			}
		}
	});
</script>