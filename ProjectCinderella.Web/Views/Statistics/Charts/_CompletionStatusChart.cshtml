@model ProjectCinderella.Model.UI.CompletionStatus

<script>
	c3.generate({
		bindto: '#@Model.ID',
		data: {
			columns: [
				['Not Started', @Model.NumNotStarted],
				['In Progress', @Model.NumInProgress],
				['Completed', @Model.NumCompleted]
			],
			type: 'donut'
		},
		donut: {
			title: "@Model.Title",
			label: {
				format: function(value) { return value; }
			}
		}
	});
</script>