@model ProjectCinderella.Model.Common.Movie
@using ProjectCinderella.Web.Common
@using ProjectCinderellaCore.Common
@using UI.Enums

<div id="fh5co-board" data-columns>
    <div class="item">
        <div class="flip-container @Model.CompletionStatus.ToString()" ontouchstart="this.classList.toggle('hover');">
            <div class="flipper movie">
                <div class="front">
                    <div class="animate-box text-center">
                        <a href="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? Links.Content.Images.Reel_jpg : Model.ImageUrl)" class="image-popup img-thumbnail img-fluid fh5co-board-img" title="@Model.Director - @Model.Title (@Model.YearReleased)">
                            <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? Links.Content.Images.Reel_jpg : Model.ImageUrl)" alt="@Model.Title">
                        </a>
                    </div>
                </div>
                <div class="back">
                    <img src="@Links.Content.Images.Reel_jpg" alt="Reel" />
                    <div class="info fh5co-desc @Model.CompletionStatus.ToString()" data-id="@Model.ID">
                        <a href="@Url.Action(User.Identity.IsAuthenticated && Model.UserNum == User.Identity.GetUserNum() ? MVC.Movie.Edit(Model.ID) : MVC.Movie.Details(Model.ID))">
                            <div class="row">
                                @Html.DisplayFor(modelItem => Model.Title)
                            </div>
                            <div class="row">
                                @Html.DisplayFor(modelItem => Model.Type)
                                <span>@Model.Rating.GetDisplayName()</span>
                                <span class="@CompletionStatusHelper.GetStatusClass(Model.CompletionStatus)"></span>
                            </div>
                            <div class="row">
                                @Html.DisplayFor(x => x.Notes)
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>