@model List<BusinessLogic.Models.Movie>

<div class="container" data-toggle="collapse" data-parent="#accordion" href="#moviesUpdated">
    <div class="row panel panel-primary panel-collapse">
        <h2>
            Recently Updated Movies
            <span class="fa fa-chevron-circle-up"></span>
        </h2>
    </div>
</div>

<div id="moviesUpdated" class="collapsed container collapse">
    @foreach (var movie in Model)
    {
        @Html.Partial(MVC.Movie.Views._Movie, movie)
    }
</div>