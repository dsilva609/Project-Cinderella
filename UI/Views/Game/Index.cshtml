@using Microsoft.AspNet.Identity
@model UI.Models.GameViewModel
@{
	ViewBag.Title = Model.ViewTitle;
}

<script>
	var deleteUrl = '@Url.Action(MVC.Game.Delete())';
</script>

<div>
	<div class="h2 col-xs-4 col-sm-7">
		Games
	</div>

	<div class="col-xs-8 col-sm-5 text-right" style="padding-top: 1.25em; display: inline-flex;">
		@if (User.Identity.IsAuthenticated)
		{
			@Html.ActionLink("Add Game", MVC.Game.Create(), new { @class = "btn btn-default", @style = "margin-right:1em;" })
		}
		@using (Html.BeginForm(MVC.Game.Index(), FormMethod.Get, new { @style = "display:inline-flex;" }))
		{
			@Html.TextBox("query", null, new { @class = "form-control", @placeholder = "Search" })
			<button type="submit" class="btn btn-default">
				<span class="glyphicon glyphicon-search"></span>
			</button>
		}
	</div>

	<div class="table table-responsive" style="padding-top: 3em;">
		<div class="bold row">
			<div class="col-xs-3">
				@Html.DisplayNameFor(x => x.Games[0].Title)
			</div>

			<div class="col-xs-3">
				@Html.DisplayNameFor(x => x.Games[0].Developer)
			</div>
			<div class="col-xs-3">
				@Html.DisplayNameFor(x => x.Games[0].Publisher)
			</div>
			<div class="col-xs-2">
				@Html.DisplayNameFor(x => x.Games[0].YearReleased)
			</div>
		</div>
		@foreach (var game in Model.Games)
		{
			<div id="Game" class="row info" data-id="@game.ID">
				<a href="@Url.Action(User.Identity.IsAuthenticated ? MVC.Game.Edit(game.ID) : MVC.Game.Details(game.ID))">
					<div class="col-xs-3">
						@Html.DisplayFor(x => game.Title)
					</div>

					<div class="col-xs-3">
						@Html.DisplayFor(x => game.Developer)
					</div>
					<div class="col-xs-3">
						@Html.DisplayFor(x => game.Publisher)
					</div>
					<div class="col-xs-2">
						@Html.DisplayFor(x => game.YearReleased)
					</div>
				</a>
				@if (User.Identity.IsAuthenticated && game.UserID == User.Identity.GetUserId())
				{
					<div class="col-xs-1 hidden-xs">
						<a href="#" id="deleteBtn" class="fa fa-trash" data-id=@game.ID></a>
					</div>
				}
			</div>
		}
		<div>
		</div>
	</div>
</div>

