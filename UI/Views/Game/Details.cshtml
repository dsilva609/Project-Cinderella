            @Html.DisplayFor(m => m.Platform, new { @class = "form-control" })
        </div>

        <div class="col-xs-6">
            @Html.LabelFor(m => m.IsDLC):
            @Html.DisplayFor(m => m.IsDLC, new { @class = "form-control" })
        </div>
        <div class="col-xs-6">
            @Html.LabelFor(m => m.PartOfSeries):
