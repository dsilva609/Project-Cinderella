@model UI.Models.GameStatsModel

<script>
	c3.generate({
		bindto: '#@Model.ID',
		data: {
			columns: [
				['DS', @Model.NumNintendoDS],
				['3DS', @Model.NumNintendo3DS],
				['PSP', @Model.NumPSP],
				['PS Vita', @Model.NumPSVita]
			],
			type: 'donut'
		},
		donut: {
			title: "@Model.Title",
			label: {
				format: function(value) { return value; }
			}
		}
	});
</script>