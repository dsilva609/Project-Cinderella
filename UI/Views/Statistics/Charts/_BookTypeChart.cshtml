@model UI.Models.BookStatsModel

<script>
	c3.generate({
		bindto: '#@Model.ID',
		data: {
			columns: [
				['Novel', @Model.NumNovel],
				['Comic', @Model.NumComic],
				['Manga', @Model.NumManga]
			],
			type: 'donut'
		},
		donut: {
			title: "@Model.Title",
			label: {
				format: function (value) { return value; }
			}
		}
	});
</script>