@model UI.Models.AlbumStatsViewModel

<div class="collapse in">
	<div class="panel-body">
		<ul class="list-group col-md-6">
			<li class="list-group-item active">
				Album Stats
			</li>
			<li class="list-group-item">
				Vinyl Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.NumVinyl</span>
			</li>
			<li class="list-group-item">
				CD Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.NumCD</span>
			</li>
			<li class="list-group-item">
				33 1/3 RPM Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.Num33RPM</span>
			</li>
			<li class="list-group-item">
				45 RPM Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.Num45RPM</span>
			</li>
			<li class="list-group-item">
				78 RPM Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.Num78RPM</span>
			</li>
			<li class="list-group-item">
				12" Record Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.Num12Inch</span>
			</li>
			<li class="list-group-item">
				10" Record Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.Num10Inch</span>
			</li>
			<li class="list-group-item">
				7" Record Count
				<span class="tag tag-info tag-pill pull-xs-right">@Model.Num7Inch</span>
			</li>
		</ul>
	</div>
</div>

