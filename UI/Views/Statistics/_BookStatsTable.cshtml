@model UI.Models.BookStatsModel

<div class="collapse in">
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item active">
                Book Stats
            </li>
            <li class="list-group-item">
                Novel Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Types.NumNovel</span>
            </li>
            <li class="list-group-item">
                Comic Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Types.NumComic</span>
            </li>
            <li class="list-group-item">
                Manga Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.Types.NumManga</span>
            </li>
            <li class="list-group-item">
                Hardcover Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.NumHardcover</span>
            </li>
            <li class="list-group-item">
                First Edition Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.NumFirstEdition</span>
            </li>
            <li class="list-group-item">
                Total Page Count
                <span class="tag tag-info tag-pill pull-xs-right">@Model.TotalPageCount</span>
            </li>
        </ul>
    </div>
</div>

<div class="collapse in">
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item active">
                Top Publishers
            </li>
            @foreach (var publisher in Model.TopPublishers)
            {
                <li class="list-group-item">
                    @publisher
                </li>
            }
        </ul>
    </div>
</div>

