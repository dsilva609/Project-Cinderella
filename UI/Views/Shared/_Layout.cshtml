@using UI.Models
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Project Cinderella</title>
	@Styles.Render("~/Content/css")
	@Scripts.Render("~/bundles/modernizr")
	@Styles.Render(Links.Content.Responsive_css)
	<!-- Animate.css -->
	@Styles.Render(Links.Content.themes.Hydrogen.animate_css)
	<!-- Icomoon Icon Fonts-->
	@Styles.Render(Links.Content.themes.Hydrogen.icomoon_css)
	<!-- Magnific Popup -->
	@Styles.Render(Links.Content.themes.Hydrogen.magnific_popup_css)
	<!-- Salvattore -->
	@Styles.Render(Links.Content.themes.Hydrogen.salvattore_css)
	<!-- Theme Style -->
	@Styles.Render(Links.Content.themes.Hydrogen.style_css)
	@Styles.Render(Links.Content.Sass.Main_css)
	<!-- Modernizr JS -->
	@*	<script src="@Links.Scripts.Hydrogen.modernizr_2_6_2_min_js"></script>*@

	@Scripts.Render("~/bundles/jquery")
	@Scripts.Render("~/bundles/jqueryui")
	@Scripts.Render("~/bundles/bootstrap")
	@Scripts.Render(Links.Scripts.bootbox_js)
	@RenderSection("scripts", required: false)
</head>
@if (TempData.ContainsKey("Toastr"))
{
	var toastr = TempData["Toastr"] as Toastr;
	@ToastrBuilder.ShowToastMessages(toastr);
}
<body>
	@*<div class="navbar navbar-default navbar-fixed-top">*@
	<div class="row">
		<div id="fh5co-header" role="banner">
			<div class="container">
				<div class="row">
					<div class="col-xs-12">
						<a href="#" class="fh5co-menu-btn js-fh5co-menu-btn">Menu <span class="fa fa-bars"></span></a>
						<h1 class="fh5co-logo">
							@Html.ActionLink("Project Cinderella", MVC.Home.Index(), new { @class = "navbar-brand" })
						</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div id="fh5co-offcanvass">
		<a href="#" class="fh5co-offcanvass-close js-fh5co-offcanvass-close">Menu <i class="icon-cross"></i> </a>
		<h1 class="fh5co-logo">
			@Html.ActionLink("Project Cinderella", MVC.Home.Index(), new { @class = "navbar-brand" })
		</h1>
		<ul>
			<li>@Html.ActionLink("About", MVC.Home.About())</li>
			<li>@Html.ActionLink("Contact", MVC.Home.Contact())</li>
			@if (User.IsInRole("Admin"))
			{
				<li>@Html.ActionLink("Error Log", MVC.Elmah.Index())</li>
			}

			<li class="dropdown">
				<a class="dropdownBtn">Menu<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>@Html.ActionLink("About", MVC.Home.About())</li>
					<li>@Html.ActionLink("Contact", MVC.Home.Contact())</li>
					@if (User.IsInRole("Admin"))
					{
						<li>@Html.ActionLink("Error Log", MVC.Elmah.Index())</li>
					}
				</ul>
			</li>
			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#">Albums<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>@Html.ActionLink("View Albums", MVC.Album.Index())</li>
					@if (User.Identity.IsAuthenticated)
					{
						<li>@Html.ActionLink("Add Album", MVC.Album.Create())</li>
						<li>@Html.ActionLink("Search Discogs for Album", MVC.Album.Search())</li>
						<li>
							@using (Html.BeginForm(MVC.Album.Index(), FormMethod.Get, new { @style = "display:inline-flex;" }))
							{
								@Html.TextBox("query", null, new { @class = "form-control", @placeholder = "Search" })
								<button type="submit" class="btn btn-default">
									<span class="fa fa-search"></span>
								</button>
							}
						</li>
					}
				</ul>
			</li>
			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#">Books<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>@Html.ActionLink("View Books", MVC.Book.Index())</li>
					@if (User.Identity.IsAuthenticated)
					{
						<li>@Html.ActionLink("Add Book", MVC.Book.Create())</li>
						<li>@Html.ActionLink("Search Google for Book", MVC.Book.Search())</li>
						<li>
							@using (Html.BeginForm(MVC.Book.Index(), FormMethod.Get, new { @style = "display:inline-flex;" }))
							{

								@Html.TextBox("query", null, new { @class = "form-control", @placeholder = "Search" })
								<button type="submit" class="btn btn-default">
									<span class="fa fa-search"></span>
								</button>

							}
						</li>
					}
				</ul>
			</li>

			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#">Movies<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>@Html.ActionLink("View Movies", MVC.Movie.Index())</li>
					@if (User.Identity.IsAuthenticated)
					{
						<li>@Html.ActionLink("Add Movie", MVC.Movie.Create())</li>
						<li>
							@using (Html.BeginForm(MVC.Movie.Index(), FormMethod.Get, new { @style = "display:inline-flex;" }))
							{

								@Html.TextBox("query", null, new { @class = "form-control", @placeholder = "Search" })
								<button type="submit" class="btn btn-default">
									<span class="fa fa-search"></span>
								</button>

							}
						</li>
					}
				</ul>
			</li>

			<li class="dropdown">
				<a class="dropdown-toggle" data-toggle="dropdown" href="#">Games<span class="caret"></span></a>
				<ul class="dropdown-menu">
					<li>@Html.ActionLink("View Games", MVC.Game.Index())</li>
					@if (User.Identity.IsAuthenticated)
					{
						<li>@Html.ActionLink("Add Game", MVC.Game.Create())</li>
						<li>
							@using (Html.BeginForm(MVC.Game.Index(), FormMethod.Get, new { @style = "display:inline-flex;" }))
							{

								@Html.TextBox("query", null, new { @class = "form-control", @placeholder = "Search" })
								<button type="submit" class="btn btn-default">
									<span class="fa fa-search"></span>
								</button>

							}
						</li>
					}
				</ul>
			</li>
			<li>@Html.Partial(MVC.Shared.Views._LoginPartial)</li>
		</ul>
	</div>

	<div class="container body-content">
		@RenderBody()

		@Scripts.Render("~/bundles/custom")

		<!-- jQuery Easing -->
		<script src="@Links.Scripts.Hydrogen.jquery_easing_1_3_js"></script>
		<!-- Bootstrap -->
		@*<script src="@Links.Scripts.Hydrogen.bootstrap_min_js"></script>*@
		<!-- Waypoints -->
		<script src="@Links.Scripts.Hydrogen.jquery_waypoints_min_js"></script>
		<!-- Magnific Popup -->
		<script src="@Links.Scripts.Hydrogen.jquery_magnific_popup_min_js"></script>
		<!-- Salvattore -->
		<script src="@Links.Scripts.Hydrogen.salvattore_min_js"></script>
		<!-- Main JS -->
		<script src="@Links.Scripts.Hydrogen.main_js"></script>
		<footer>
			<br />
			<p>&copy; @DateTime.Now.Year - Project Cinderella - Designed By Dennis D. Silva</p>
		</footer>
	</div>
</body>
</html>