@model BusinessLogic.Models.Book
@using UI.Enums
<div id="fh5co-board" data-columns>
    <div class="item">
        <div class="flip-container @Model.CompletionStatus.ToString()" ontouchstart="this.classList.toggle('hover');">
            <div class="flipper book">
                <div class="front">
                    <div class="animate-box text-center">
                        <a href="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? Links.Content.Images.Book_jpg : Model.ImageUrl)" class="image-popup img-thumbnail img-fluid fh5co-board-img" title="@Model.Author - @Model.Title (@Model.YearReleased)">
                            <img src="@(string.IsNullOrWhiteSpace(Model.ImageUrl) ? Links.Content.Images.Book_jpg : Model.ImageUrl)" alt="@Model.Title">
                        </a>
                    </div>
                </div>
                <div class="back">
                    <div class="info fh5co-desc @Model.CompletionStatus.ToString()" data-id="@Model.ID">
                        <a href="@Url.Action(User.Identity.IsAuthenticated ? MVC.Book.Edit(Model.ID) : MVC.Book.Details(Model.ID))">
                            <div class="row">
                                @Html.DisplayFor(modelItem => Model.Author)
                            </div>
                            <div class="row">
                                @Html.DisplayFor(modelItem => Model.Title)
                                <span class="@CompletionStatusHelper.GetStatusClass(Model.CompletionStatus)"></span>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>