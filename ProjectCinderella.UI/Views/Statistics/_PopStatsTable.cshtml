@model UI.Models.PopStatsModel

<div class="collapse in">
    <div class="panel-body">
        <ul class="list-group">
            <li class="list-group-item active">
                Top Series
            </li>
            @foreach (var series in Model.TopSeries)
            {
                <li class="list-group-item">
                    @series.Item1
	                <span class="tag tag-info tag-pill pull-xs-right">@series.Item2</span>
                </li>
            }
        </ul>
    </div>
</div>

